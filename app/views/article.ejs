<%- include('partials/header') %>

  <!-- Page Content -->
  <div class="container container-main">

    <div class="row">

        <%- include('partials/leftMenu') %>

      <div class="col-lg-9">

        <div class="row">
          <div class="col-lg-6">
            <img class="" src="/images/<%= figurine.name.toLowerCase() %>.png" alt="">
          </div>

          <div class="col-lg-6">
            <div class="card">
              <div class="card-body">
                  <h3 class="card-title">
                      <%= figurine.name %>
                    <div class="badge badge-pill badge-<%= figurine.category.toLowerCase() %>"><%= figurine.category %></div>
                  </h3>
                  <p class="card-text">Taille réelle : <%= figurine.size %>cm</p>
                  <p class="card-text"><%= figurine.description %></p>
                  <p class="card-text">
                    Note moyenne : 
                    <% for( let startCount = 1; startCount <= 5; startCount++ ) { %>
                      <% if (startCount <= figurine.note ) { %>
                          &#9733; 
                      <% } else { %>
                          &#9734;
                      <% } %>
                    <% } %>
                    <br>
                    <a href="#" data-toggle="modal" data-target="#reviewsModal">Détails des avis</a>
                  </p>
                  <h5>$<%= figurine.price %></h5>
                  <p class="card-text">
                    <a href="/cart/add/<%= figurine.id %>" class="link-add-cart">+ Ajouter au panier</a>
                  </p>
              </div>
            </div>
          
          </div>

        </div>
        <!-- /.row -->

      </div>
      <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col text-right">
            <div class="btn">
                <a href="/">Continuer mes achats</a>
            </div>
            <div class="btn btn-success">
              Passer Commande
            </div>
        </div>
      </div>
  </div>
  <!-- /.container -->


  <%- include('partials/modals') %>

<%- include('partials/footer') %>